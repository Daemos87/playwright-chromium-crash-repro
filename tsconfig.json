{
  "exclude": ["./node_modules/**"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",

    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "declaration": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
